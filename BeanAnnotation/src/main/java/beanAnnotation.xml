<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
   	<context:annotation-config/>
	<bean id="studentBean" class="com.beans.Student">
		<property name="name" value="Subhadeep Sen"/>
		<property name="age" value="24"/>
	</bean>
	
	<bean id="address" class="com.beans.Address">
		<constructor-arg value="Kolkata" type="java.lang.String"/>
	</bean>
	
	<bean id="address2" class="com.beans.Address">
		<constructor-arg value="Purulia" type="java.lang.String"/>
	</bean>

</beans>